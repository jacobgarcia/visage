{
  "apps": [
    {
      "name": "VisualSearch",
      "script": "./server.js",
      "instances": "max",
      "exec_mode": "cluster",
      "env_production": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "BillingReset",
      "env_production": {
        "NODE_ENV": "production",
        "API_URL": "https://api.vs-01-dev.qbo.tech"
      },
      "script": "./cron/billing-cron.js",
      "merge_logs": true,
      "error_file": "billing-error.log",
      "out_file": "billing-out.log",
      "cron_restart": "0 0 1 * *"
    },
    {
      "name": "Indexer",
      "script": "../indexer.js",
      "merge_logs": true,
      "error_file": "indexer-error.log",
      "out_file": "indexer-out.log",
      "cron_restart": "0 0 * * *"
    }
  ]
}
